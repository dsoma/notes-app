
{{> note_display }}

{{#if noteKey }}
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 d-flex justify-content-center">
            <div class="btn-group">
                <a class="btn btn-secondary" href="/notes/destroy?key={{noteKey}}">
                <i data-feather="trash-2" class="d-inline-block align-text-center me-2"></i>
                Delete
                </a>
                <a class="btn btn-secondary" href="/notes/edit?key={{noteKey}}">
                <i data-feather="edit" class="d-inline-block align-text-center me-2"></i>
                Edit
                </a>
            </div>
        </div>
    </div>
</div>
{{/if}}
