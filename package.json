{
    "name": "notes",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "scripts": {
        "lint": "eslint",
        "start": "cross-env REQ_LOG_FORMAT=common DEBUG=notes:* USER_SERVICE_URL=http://localhost:3001 node ./app.js",
        "server1": "cross-env REQ_LOG_FORMAT=common DEBUG=notes:* PORT=3002 node ./app.js",
        "server2": "cross-env REQ_LOG_FORMAT=common DEBUG=notes:* PORT=3003 node ./app.js",
        "theme": "npm run theme-css && npm run theme-min-css",
        "theme-css": "wget https://bootswatch.com/5/superhero/bootstrap.css -O theme/superhero/bootstrap.css",
        "theme-min-css": "wget https://bootswatch.com/5/superhero/bootstrap.min.css -O theme/superhero/bootstrap.min.css",
        "build": "npm run lint && npm run theme",
        "sqlite3-setup": "sqlite3 ./data/notes.sqlite3 --init ./models/schema-sqlite3.sql",
        "build-frontnet": "nerdctl network create --driver=bridge frontnet",
        "remove-frontnet": "nerdctl network rm frontnet",
        "prebuild-db": "mkdir notes-data",
        "build-db-notes": "nerdctl run --detach --name db-notes --network frontnet -v /Users/Shared/mysql-db-data-notes:/var/lib/mysql:rw --env MYSQL_USER=notes --env MYSQL_PASSWORD=notes --env MYSQL_DATABASE=notes --env MYSQL_ROOT_PASSWORD=mysql_1234_Mrum --env DATABASE_HOST=db-notes mysql:9.0 --bind_address=0.0.0.0",
        "start-db-notes": "nerdctl start db-notes",
        "stop-db-notes": "nerdctl stop db-notes",
        "package-notes": "nerdctl build -t svc-notes .",
        "build-notes": "nerdctl run --detach --name svc-notes --network frontnet -p 80:3000 svc-notes",
        "start-notes": "nerdctl start svc-notes",
        "stop-notes": "nerdctl stop svc-notes",
        "start-service": "npm run start-db-notes && npm run start-notes",
        "stop-service": "npm run stop-db-notes && npm run stop-notes",
        "remove-db-notes": "nerdctl rm db-notes",
        "remove-notes": "nerdctl rm svc-notes",
        "connect-user-auth": "nerdctl network connect frontnet svc-user-auth",
        "deploy": "npm run build-frontnet; npm run build-db-notes && npm run package-notes && npm run build-notes",
        "purge": "npm run stop-service && npm run remove-notes && npm run remove-db-notes && npm run remove-frontnet"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "bootstrap": "^5.3.3",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "express": "~4.21.0",
        "express-session": "^1.18.1",
        "feather-icons": "^4.29.2",
        "fs-extra": "^11.2.0",
        "hbs": "~4.2.0",
        "js-yaml": "^4.1.0",
        "level": "^8.0.1",
        "mongodb": "^6.9.0",
        "morgan": "~1.10.0",
        "mysql2": "^3.11.3",
        "passport": "^0.7.0",
        "passport-local": "^1.0.0",
        "passport-twitter": "^1.0.4",
        "rotating-file-stream": "^3.2.5",
        "sequelize": "^6.37.4",
        "session-file-store": "^1.5.0",
        "sqlite3": "^5.1.7",
        "superagent": "^10.1.0"
    },
    "devDependencies": {
        "eslint": "^9.11.1",
        "globals": "^15.9.0"
    }
}
